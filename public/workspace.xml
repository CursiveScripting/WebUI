<Workspace>
	<Type name="number" color="#0cf" validation="[0-9]+" />
	<Type name="text" color="#c0f" validation=".*" />
	<Type name="deck" color="#f00" />
	<Type name="card" color="#cc0" />
	
	<RequiredProcess name="prepareDeck">
		<Description>Organise deck of cards for use</Description>
		<Input name="cards" type="deck" />
		<Output name="cards" type="deck" />
		<ReturnPath name="success" />
		<ReturnPath name="failure" />
	</RequiredProcess>

	<SystemProcess name="print">
		<Description>Display some text output</Description>
		<Input name="message" type="text" />
	</SystemProcess>
	
	<SystemProcess name="text equals" folder="logic">
		<Description>Compare two text values</Description>
		<Input name="text1" type="text" />
		<Input name="text2" type="text" />
		<ReturnPath name="yes" />
		<ReturnPath name="no" />
	</SystemProcess>
	
	<SystemProcess name="equals" folder="logic">
		<Description>Compare two number values</Description>
		<Input name="num1" type="number" />
		<Input name="num2" type="number" />
		<ReturnPath name="yes" />
		<ReturnPath name="no" />
	</SystemProcess>
	
	<SystemProcess name="less than" folder="logic">
		<Description>Determine if one number is less than another</Description>
		<Input name="num1" type="number" />
		<Input name="num2" type="number" />
		<ReturnPath name="yes" />
		<ReturnPath name="no" />
	</SystemProcess>
	
	<SystemProcess name="greater than" folder="logic">
		<Description>Determine if one number is greater than another</Description>
		<Input name="num1" type="number" />
		<Input name="num2" type="number" />
		<ReturnPath name="yes" />
		<ReturnPath name="no" />
	</SystemProcess>
	
	<SystemProcess name="shuffle" folder="actions">
		<Description>Shuffle cards randomly</Description>
		<Input name="cards" type="deck" />
	</SystemProcess>
	
	<SystemProcess name="combine" folder="actions">
		<Description>Combine two sets of cards</Description>
		<Input name="cards1" type="deck" />
		<Input name="cards2" type="deck" />
	</SystemProcess>
	
	<SystemProcess name="get type" folder="info">
		<Description>Get the type of a card</Description>
		<Input name="card" type="card" />
		<Output name="type" type="text" />
	</SystemProcess>
	
	<SystemProcess name="add" folder="actions">
		<Description>Add a card to a deck</Description>
		<Input name="cards" type="deck" />
		<Input name="card" type="card" />
	</SystemProcess>
	
	<SystemProcess name="count" folder="info">
		<Description>Get the number of cards in a deck</Description>
		<Input name="cards" type="deck" />
		<Output name="size" type="number" />
	</SystemProcess>
	
	<SystemProcess name="separate" folder="actions">
		<Description>Separate a deck into two, putting all cards of a particular type into their own deck</Description>
		<Input name="cards" type="deck" />
		<Input name="type" type="text" />
		<Output name="remainder" type="deck" />
		<Output name="separated" type="deck" />
	</SystemProcess>
	
	<SystemProcess name="contains" folder="info">
		<Description>Determine whether a deck contains a particular type of card</Description>
		<Input name="cards" type="deck" />
		<Input name="type" type="text" />
		<ReturnPath name="yes" />
		<ReturnPath name="no" />
	</SystemProcess>
	
	<SystemProcess name="split" folder="actions">
		<Description>Split a deck of cards into a specified number of parts</Description>
		<Input name="cards" type="deck" />
		<Input name="parts" type="number" />
		<Output name="part1" type="deck" />
		<Output name="part2" type="deck" />
		<Output name="part3" type="deck" />
		<Output name="part4" type="deck" />
		<Output name="part5" type="deck" />
		<Output name="part6" type="deck" />
		<Output name="part7" type="deck" />
		<Output name="part8" type="deck" />
	</SystemProcess>
</Workspace>